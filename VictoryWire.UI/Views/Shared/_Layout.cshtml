<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Victory Wire</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="../" class="navbar-brand">Victory Wire</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="../help/">Services</a>
                    </li>
                    <li>
                        <a href="../help/">Pricing</a>
                    </li>
                    <li>
                        <a href="http://news.bootswatch.com">Support</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (VictoryWire.Shared.Runtime.Account == null)
                    {
                        <li>@Html.ActionLink("Log In", "LogIn", "Account", null, null)</li>
                        <li>@Html.ActionLink("Sign Up", "SignUp", "Account", null, null)</li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="userprofile">Hello, @VictoryWire.Shared.Runtime.Account.FirstName <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("My Profile", "MyProfile", "Manage", null, null)</li>
                                <li>@Html.ActionLink("Control Panel", "Index", "Manage", null, null)</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Log Out", "LogOut", "Account", null, null)</li>
                            </ul>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </div>


    <div class="container">

        @RenderBody()

        <hr />

        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Victory Wire 2017</p>
                </div>
            </div>
        </footer>

    </div>
    <script type="text/javascript">
        $(function () {
            // datepicker handler
            $(document).on("focus", "input.calendar-datepicker", function () {
                //Show datepicker.
                $(this).datepicker();
            }).on("keypress", "input.calendar-datepicker", function () {
                //Hide datepicker for manual entry.
                $(this).datepicker("hide");
            }).on("click", "span.calendar-datepicker", function () {
                //Show datepicker when calendar icon clicked.
                $(this).closest(".input-group").find("input.calendar-datepicker").trigger("focus");
            });
        });
    </script>
</body>
</html>
